{
    "globals": {"fetch": false},
    "extends": [
        "airbnb",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/typescript",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "prettier",
        "@typescript-eslint",
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "project": "./tsconfig.json",
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        },
        "useJSXTextNode": true
    },
    "rules": {
        "import/no-cycle": "off",
        "import/no-unresolved": "off",
        "prettier/prettier": [
            "error",
            {
                "printWidth": 100,
                "tabWidth": 4,
                "singleQuote": true,
                "trailingComma": "es5"
            }
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ]
    }
}
